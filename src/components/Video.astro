---
interface Props {
	src: string;
	autoplay?: boolean;
	muted?: boolean;
	loop?: boolean;
	controls?: boolean;
	poster?: string;
	caption?: string;
}
const { src, autoplay, muted, loop, controls, poster, caption } = Astro.props;
---

<figure>
	<video
		class="rounded"
		width="1920"
		height="1080"
		autoplay={autoplay}
		muted={muted}
		loop={loop}
		controls={controls}
		poster={poster}
	>
		<source src={src} />
		<p>
			Désolé, votre navigateur ne peut pas lire cette vidéo. Veuiller essayer sur un navigateur
			supportant le MP4 H264.
		</p>
	</video>
	{
		Astro.slots.has('default') && (
			<figcaption>
				<slot />
			</figcaption>
		)
	}
	{
		caption && (
			<figcaption>
				<slot>
					<p>{caption}</p>
				</slot>
			</figcaption>
		)
	}
</figure>

<style>
	@tailwind utilities;
</style>
