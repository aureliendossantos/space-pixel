---
export interface Props {
	icon?: 'puzzle-piece' | 'question-mark' | 'check-list';
}

const { icon } = Astro.props;
---

<div class="memo">
	<section>
		<slot />
	</section>
</div>

<style lang="scss" is:global>
	.memo {
		ol {
			counter-reset: li;
			list-style-type: none;
			padding-left: 10px;

			> li {
				position: relative;
				padding: 5px 0 5px 36px;

				&:before {
					content: counter(li);
					counter-increment: li;
					height: 24px;
					width: 24px;
					border: 2px solid white;
					border-radius: 50%;
					color: white;
					text-align: center;
					position: absolute;
					left: 0;
					top: 2px;
					background-color: #ffac52;
				}
			}
		}
	}
</style>
